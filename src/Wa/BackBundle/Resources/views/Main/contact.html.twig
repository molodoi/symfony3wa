{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}Admin Contact - Application{% endblock %}

{% block content %}
    {{ parent() }}

    <h1>Contact</h1>

    {% if form_errors(formContact) %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-ban"></i> Alerte!</h4>
            Tous les champs de votre formulaire n'ont pas été validé.
            {%- for error in errors -%}
                <p class="control-label" for="inputError"><i class="fa fa-times-circle-o"></i> {{ error.message }}</p>
            {%- endfor -%}
        </div>
    {% endif %}

    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire de contact</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            {{ form_start(formContact, {'attr': { novalidate: 'novalidate' ,'role': 'form'}}) }}
                <!-- text input -->
                {{ form_label(formContact.firstname, 'Prénom', {'label_attr': {'class': 'control-label'}}) }}
                <div class="form-group {% if form_errors(formContact.firstname) %} has-error {% endif %}">

                    {{ form_errors(formContact.firstname) }}
                    {{ form_widget(formContact.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
                </div>
                {{ form_label(formContact.lastname, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                <div class="form-group {% if form_errors(formContact.lastname) %} has-error {% endif %}">

                    {{ form_errors(formContact.lastname) }}
                    {{ form_widget(formContact.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
                </div>
                {{ form_label(formContact.email, 'Email', {'label_attr': {'class': 'control-label'}}) }}
                <div class="form-group {% if form_errors(formContact.email) %} has-error {% endif %}">
                    {{ form_errors(formContact.email) }}
                    {{ form_widget(formContact.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                </div>
                {{ form_label(formContact.content, 'Message', {'label_attr': {'class': 'control-label'}}) }}
                <!-- textarea -->
                <div class="form-group {% if form_errors(formContact.content) %} has-error {% endif %}">
                    {{ form_errors(formContact.content) }}
                    {{ form_widget(formContact.content, { 'attr': {'class': 'form-control'} }) }}
                </div>

                {{ form_widget(formContact.envoyer, { 'label': 'Envoyer' , 'attr': {'class': 'btn btn-sm btn-info btn-flat pull-left'} }) }}
                {{ form_rest(formContact) }}
                {{ form_end(formContact) }}

        </div><!-- /.box-body -->
    </div>








{% endblock %}