{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}Créer un Catégorie - Application{% endblock %}

{% block content %}
    {{ parent() }}
    <h1>Créer un Catégorie</h1>

    {% if form_errors(formCategory) %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-ban"></i> Alerte!</h4>
            Tous les champs de votre formulaire n'ont pas été validé.
            {%- for error in errors -%}
                <p class="control-label" for="inputError"><i class="fa fa-times-circle-o"></i> {{ error.message }}</p>
            {%- endfor -%}
        </div>
    {% endif %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire de Catégorie</h3>
        </div><!-- /.box-header -->
        {{ form_start(formCategory, {'attr': { novalidate: 'novalidate' ,'role': 'form'}}) }}
        <div class="box-body">
            {{ form_errors(formCategory) }}
            {{ form_label(formCategory.title) }}
            <div class="form-group {% if form_errors(formCategory.title) %} has-error {% endif %}">
                {{ form_errors(formCategory.title) }}
                {{ form_widget(formCategory.title, { 'attr': {'class': 'form-control', 'placeholder': 'Titre'} }) }}
            </div>

            {{ form_label(formCategory.description) }}
            <div class="form-group {% if form_errors(formCategory.description) %} has-error {% endif %}">
                {{ form_errors(formCategory.description) }}
                {{ form_widget(formCategory.description, { 'attr': {'class': 'form-control', 'placeholder': 'Decription'} }) }}
            </div>

            {{ form_label(formCategory.position) }}
            <div class="form-group {% if form_errors(formCategory.position) %} has-error {% endif %}">
                {{ form_errors(formCategory.position) }}
                {{ form_widget(formCategory.position, { 'attr': {'class': 'form-control', 'placeholder': 'Position'} }) }}
            </div>

            <div class="box-footer">

                <button class="btn btn-sm btn-info btn-flat pull-left">Envoyer</button>

                <a href="{{ path('wa_back_categorie_list') }}" class="btn btn-sm btn-info btn-flat pull-right">Revenir à la liste des catégories</a>
            </div>
            {{ form_rest(formCategory) }}
        </div>
        {{ form_end(formCategory) }}
    </div>
{% endblock %}