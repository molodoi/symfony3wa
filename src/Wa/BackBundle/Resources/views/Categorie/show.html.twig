{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}
    Categorie {{ categorie.title }} {{ parent() }}
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header with-border">
            <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
            </div>
            <h3 class="box-title">Catégorie {{ categorie.title }}
                {% if categorie.active %}
                    <span class="label label-success">
                            Active
                        </span>
                {% endif %}

                {% if categorie.image %}
                    <img src="{{ asset(categorie.image.webPath('thumb-100-100-')) }}" />
                    <img src="{{ asset(categorie.image.webPath('thumb-400-400-')) }}" />
                    <img src="{{ asset(categorie.image.webPath('thumb-800-800-')) }}" />
                {% endif %}
            </h3>
        </div>
        <div class="box-body">
            {{ categorie.description|striptags|nl2br }}
        </div><!-- /.box-body -->
        <div class="box-footer">
            Identifiant {{ categorie.id }}
        </div><!-- /.box-footer-->
    </div>
    <a href="{{ path('wa_back_categorie_list') }}" class="btn btn-default">Retourner à la liste des catégories</a>
{% endblock %}