{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}Créer un produit - Application{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
{% endblock %}

{% block content %}
    {{ parent() }}
    <h1>Créer un commentaire</h1>

    {% if form_errors(formComment) %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-ban"></i> Alerte!</h4>
            Tous les champs de votre formulaire n'ont pas été validé.
        </div>
    {% endif %}

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire de Commentaire</h3>
        </div><!-- /.box-header -->
        {{ form_start(formComment, {'attr': { novalidate: 'novalidate' ,'role': 'form'}}) }}
        <div class="box-body">

            {{ form_label(formComment.author) }}
            <div class="form-group {% if form_errors(formComment.author) %} has-error {% endif %}">
                {{ form_errors(formComment.author) }}
                {{ form_widget(formComment.author, { 'attr': {'class': 'form-control', 'placeholder': 'Titre'} }) }}
            </div>

            {{ form_label(formComment.content) }}
            <div class="form-group {% if form_errors(formComment.content) %} has-error {% endif %}">
                {{ form_errors(formComment.content) }}
                {{ form_widget(formComment.content, { 'attr': {'class': 'form-control', 'placeholder': 'Titre'} }) }}
            </div>

            {{ form_label(formComment.note) }}
            <div class="form-group {% if form_errors(formComment.note) %} has-error {% endif %}">
                {{ form_errors(formComment.note) }}
                {{ form_widget(formComment.note, { 'attr': {'class': 'form-control', 'placeholder': 'Titre'} }) }}
            </div>

            {{ form_label(formComment.active) }}
            <div class="form-group {% if form_errors(formComment.active) %} has-error {% endif %}">
                {{ form_errors(formComment.active) }}
                {{ form_widget(formComment.active) }}
            </div>
        </div>
        {{ form_end(formComment) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="http://jqueryui.com/resources/demos/datepicker/datepicker-fr.js"></script>
    <script>
        $(function() {
            $( ".datepicker" ).datepicker(
                $.datepicker.regional["fr"]
            );
        });
    </script>
{% endblock %}
