{% extends 'WaBackBundle::layout.html.twig' %}

{% block title %}Editer un User - Application{% endblock %}


{% block tel_widget %}
    {% spaceless %}
        {% set type = 'tel' %}
        {{ block('form_widget_simple') }}

    {% endspaceless %}
{% endblock %}

{% block content %}
    {{ parent() }}
    <h1>Editer un User </h1>
    {% if form_errors(formUser) %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-ban"></i> Alerte!</h4>
            Tous les champs de votre formulaire n'ont pas été validé.
        </div>
    {% endif %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Formulaire User</h3>
        </div><!-- /.box-header -->
        {{ form_start(formUser, {'attr': { novalidate: 'novalidate' ,'role': 'form'}}) }}
        <div class="box-body">
            {{ form_errors(formUser) }}

            {{ form_label(formUser.firstname) }}
            <div class="form-group {% if form_errors(formUser.firstname) %} has-error {% endif %}">
                {{ form_errors(formUser.firstname) }}
                {{ form_widget(formUser.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'Prenom'} }) }}
            </div>

            {{ form_label(formUser.lastname) }}
            <div class="form-group {% if form_errors(formUser.lastname) %} has-error {% endif %}">
                {{ form_errors(formUser.lastname) }}
                {{ form_widget(formUser.lastname, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
            </div>

            {{ form_label(formUser.email) }}
            <div class="form-group {% if form_errors(formUser.email) %} has-error {% endif %}">
                {{ form_errors(formUser.email) }}
                {{ form_widget(formUser.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
            </div>

            {#{{ form_label(formUser.login) }}
            <div class="form-group {% if form_errors(formUser.login) %} has-error {% endif %}">
                {{ form_errors(formUser.login) }}
                {{ form_widget(formUser.login, { 'attr': {'class': 'form-control', 'placeholder': 'Login'} }) }}
            </div>#}

            {{ form_label(formUser.password.first) }}
            <div class="form-group {% if form_errors(formUser.password.first) %} has-error {% endif %}">
                {{ form_errors(formUser.password.first) }}
                {{ form_widget(formUser.password.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
            </div>

            {{ form_label(formUser.password.second) }}
            <div class="form-group {% if form_errors(formUser.password.second) %} has-error {% endif %}">
                {{ form_errors(formUser.password.second) }}
                {{ form_widget(formUser.password.second, { 'attr': {'class': 'form-control', 'placeholder': 'Repeter votre password'} }) }}
            </div>

            {{ form_label(formUser.gender) }}
            <div class="form-group {% if form_errors(formUser.password.second) %} has-error {% endif %}">
                {{ form_errors(formUser.gender) }}
                {{ form_widget(formUser.gender, { 'attr': {'class': 'form-control', 'placeholder': 'Civilite'} }) }}
            </div>

            {{ form_label(formUser.address) }}
            <div class="form-group {% if form_errors(formUser.address) %} has-error {% endif %}">
                {{ form_errors(formUser.address) }}
                {{ form_widget(formUser.address, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse'} }) }}
            </div>

            {{ form_label(formUser.phone) }}
            <div class="form-group {% if form_errors(formUser.phone) %} has-error {% endif %}">
                {{ form_errors(formUser.phone) }}
                {{ form_widget(formUser.phone) }}
            </div>

            {{ form_label(formUser.groupes) }}
            <div class="form-group {% if form_errors(formUser.phone) %} has-error {% endif %}">
                {{ form_errors(formUser.groupes) }}
                {{ form_widget(formUser.groupes, { 'attr': {'class': 'form-control', 'placeholder': 'Groupe'} }) }}
            </div>

            {{ form_label(formUser.agree) }}
            <div class="form-group {% if form_errors(formUser.agree) %} has-error {% endif %}">
                {{ form_errors(formUser.agree) }}
                {{ form_widget(formUser.agree) }}
            </div>

            <div class="box-footer">
                <button >Envoyer</button>

                <a href="{{ path('wa_back_user_list') }}" class="btn btn-sm btn-default btn-flat"><i class="fa fa-mail-reply"></i> Revenir à la liste des tags</a>
            </div>
            {{ form_rest(formUser) }}
        </div>
        {{ form_end(formUser) }}
    </div>
{% endblock %}

